    "@types/supertest": "^2.0.8",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "5.0.0-alpha.7",
    "pg": "^8.0.2",
    "pm2": "^4.4.0",
    "request": "^2.88.2",
    "request-promise": "^4.2.5",
    "supertest": "^4.0.2"
